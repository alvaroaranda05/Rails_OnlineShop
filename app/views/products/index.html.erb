<h1>Listing products</h1>

<table class="tableElementWithBorder">
  <thead>
    <tr>
      <th class="tableElementWithBorder">Title</th>
      <th class="tableElementWithBorder">Description</th>
      <th class="tableElementWithBorder">In stock date</th>
      <th class="tableElementWithBorder">Manufacturer</th>
      <th class="tableElementWithBorder">Quantity</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="tableElementWithBorder"><%= product.title %></td>
        <td class="tableElementWithBorder"><%= product.description %></td>
        <td class="tableElementWithBorder"><%= product.in_stock_date %></td>
        <td class="tableElementWithBorder"><%= product.manufacturer %></td>
        <td class="tableElementWithBorder"><%= product.quantity %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

