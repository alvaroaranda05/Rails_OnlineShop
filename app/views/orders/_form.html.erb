<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :order_status %><br>
    <%= f.text_field :order_status %>
  </div>
  <div class="field">
    <%= f.label :payment_method %><br>
    <%= f.text_field :payment_method %>
  </div>
  <div class="field">
    <%= f.label :shipping_address %><br>
    <%= f.text_field :shipping_address %>
  </div>
  <div class="field">
    <%= f.label :shipping_city %><br>
    <%= f.text_field :shipping_city %>
  </div>
  <div class="field">
    <%= f.label :purchaser_name %><br>
    <%= f.text_field :purchaser_name %>
  </div>
  <div class="field">
    <%= f.label :purchase_surname %><br>
    <%= f.text_field :purchase_surname %>
  </div>
  <div id="line_items_data">
    <%= f.fields_for :line_items do |line_items_data| %>
      <%= render 'line_items', :f => line_items_data %>
    <% end %>
  </div>

  <button type="button" id="add_product_row" data-row-number='<%= @order.line_items.size %>'>Add Product</button>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
